{
  "name": "dotstorex",
  "version": "0.0.12",
  "description": "A tiny state manager",
  "main": "index.js",
  "repository": "https://github.com/dotstorex/dotstorex",
  "author": "Eddort <webisforce@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage && eslint . && check-dts && yarn size && yaspeller *.md",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "size": "size-limit"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "clean-publish": {
    "files": [
      "logo.png",
      "ideas.md"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/unified-signatures": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "symbol-description": "off",
      "consistent-return": "off",
      "camelcase": "off",
      "import/extensions": "off",
      "prefer-let/prefer-let": "off"
    },
    "globals": {
      "jsdom": false
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\).",
      "\\d+\\.\\d+ “[^”]+”"
    ],
    "dictionary": [
      "Dotstorex",
      "Redux",
      "devtools",
      "splited",
      "JS",
      "Shakable",
      "gzipped"
    ]
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "size-limit": [
    {
      "name": "Store",
      "path": "./index.js",
      "import": "{ createStore }",
      "limit": "600B"
    },
    {
      "name": "UseEnhancer",
      "path": "./index.js",
      "import": "{ use }",
      "limit": "100B"
    },
    {
      "name": "Enhancer",
      "path": "./index.js",
      "import": "{ enhance }",
      "limit": "100B"
    }
  ],
  "exports": {
    ".": "./index.js",
    "./react": "./react/index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.4.4",
    "@size-limit/preset-small-lib": "^5.0.1",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "check-dts": "^0.5.3",
    "eslint": "^7.29.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^33.0.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "simple-git-hooks": "^2.4.1",
    "size-limit": "^5.0.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4",
    "yaspeller": "^7.0.0"
  },
  "dependencies": {}
}
